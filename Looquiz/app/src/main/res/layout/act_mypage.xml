<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="50dp"
        tools:context=".MyPageActivity">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingBottom="10dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/mypage_icon" android:layout_weight="1" app:srcCompat="@drawable/representbadge"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
    >
        <Button
                android:text="퀴즈 달성률"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/mypage_btnquizrate" android:layout_weight="1"
                android:paddingBottom="10dp"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="제휴리스트"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/mypage_btncorplist" android:layout_weight="1"
                android:paddingBottom="10dp"/>

    </LinearLayout>
</LinearLayout>
